extends base

block content
    h3 Change title of Video
    form(method="post")
        input(type="text", name="title", value=video.title, placeholder="Video Title", required, maxLength=80) 
        input(name='description', placeholder='Description', value=video.description, required, minLength=20)
        input(name='hashtags', placeholder='Hashtags, separated by ","', value=video.hashtags.join(', ') required)
        input(type="submit", value="Save")  